// Exposes theme's variables for easy re-use in CSS for plugin authors
:root
  --reveal-background-color $backgroundColor
  --reveal-main-font $mainFont
  --reveal-main-font-size $mainFontSize
  --reveal-main-color $mainColor
  --reveal-block-margin $blockMargin
  --reveal-heading-margin $headingMargin
  --reveal-heading-font $headingFont
  --reveal-heading-color $headingColor
  --reveal-heading-line-height $headingLineHeight
  --reveal-heading-letter-spacing $headingLetterSpacing
  --reveal-heading-text-transform $headingTextTransform
  --reveal-heading-text-shadow $headingTextShadow
  --reveal-heading-font-weight $headingFontWeight
  --reveal-heading1-text-shadow $heading1TextShadow
  --reveal-heading1-size $heading1Size
  --reveal-heading2-size $heading2Size
  --reveal-heading3-size $heading3Size
  --reveal-heading4-size $heading4Size
  --reveal-code-font $codeFont
  --reveal-link-color $linkColor
  --reveal-link-color-hover $linkColorHover
  --reveal-selection-background-color $selectionBackgroundColor
  --reveal-selection-color $selectionColor
