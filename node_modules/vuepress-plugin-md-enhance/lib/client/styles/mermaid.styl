.md-mermaid
  width 100%
  overflow-x scroll
  text-align center
  transition all 1s
  padding 0.6em 0.4em

  @media (max-width $MQMobileNarrow)
    margin 0 -1.5rem
    padding 0.6em 0

.md-mermaid-loading
  display flex
  justify-content center
  align-items center
  background var(--grey15, #eee)

  svg
    width 4em
    height 4em
    margin 2.5em auto
    color var(--accent-color, $accentColor)
